<h2 class="page-heading">Create a new subcategory</h2>

<%= form_with model: @subcategory, url: category_subcategories_path(@category.id), method: :post, local: true do |f| %>
  <% if @subcategory.errors.any? %>
  <div style="color: red">
    <h2><%= pluralize(@subcategory.errors.count, "error") %> prohibited this subcategory from being saved:</h2>
    <ul>
      <% @subcategory.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
  <% end %> 
  <div>
    <div class="field">
      <%= f.label :category_name %><br />
      <%= f.text_field :category_name, value: @category.category_name %>
    </div><br />

    <div class="field">
      <%= f.label :subcategory_name %><br />
      <%= f.text_field :subcategory_name, autofocus: true %>
    </div><br />

    <div class="field form-group col-md-6">
      <%= f.file_field :image, class: "form-control", accept:"image/jpeg, image/jpg" %>
    </div><br />

    <div>
      <%= f.button "Create Subcategory", class: "btn btn-sm btn-primary" %>
    </div><br />
  </div>
<% end %>